<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Icono de éxito -->
    <ImageView
        android:id="@+id/ivExito"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_check_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMensajeExito"
        android:layout_marginTop="50dp" />

    <!-- Mensaje de éxito -->
    <TextView
        android:id="@+id/tvMensajeExito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Felicidades! Se ha colocado su pedido."
        android:textColor="#6A0E77"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ivExito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Botones -->
    <Button
        android:id="@+id/btnRealizarOtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizar otro pedido"
        android:textColor="#FFA451"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tvMensajeExito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/btnRegresarMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar al menú"
        android:textColor="#FFA451"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/btnRealizarOtro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
